@section Styles {
    <link rel="stylesheet" href="~/css/kurullar.css" />
    <style>
        .kurullar-container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 0 20px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .kurul-bolumu {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        .kurul-bolumu h1 {
            font-size: 24pt;
            margin-bottom: 30px;
            color: var(--dark-color);
            position: relative;
            padding-bottom: 15px;
        }

        .kurul-bolumu h1:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        }

        .kurul-uye {
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 8px;
            background: #f8f9fa;
            transition: all 0.3s ease;
        }

        .kurul-uye:hover {
            transform: translateX(5px);
            background: #f1f3f5;
        }

        .alt-kurul {
            margin: 30px 0;
        }

        .alt-kurul h2 {
            font-size: 18pt;
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        .kurul-uye p {
            margin: 0;
            line-height: 1.6;
        }

        .kurul-uye strong {
            color: var(--dark-color);
            display: block;
            margin-bottom: 5px;
        }

        .kurul-uye a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s;
        }

        .kurul-uye a:hover {
            color: var(--secondary-color);
        }

        @@media (max-width: 991px) {
            .kurullar-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
}
