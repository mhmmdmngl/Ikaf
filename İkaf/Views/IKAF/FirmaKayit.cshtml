            text-align: center;
            margin-bottom: 4rem;
            position: relative;
            padding: 2rem 0;
        }

            .registration-header h1 {
                font-size: 3.5rem;
                font-weight: 800;
                margin-bottom: 1rem;
                background: linear-gradient(45deg, #23dee0, #fecb15);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-transform: uppercase;
                letter-spacing: 2px;
                position: relative;
                display: inline-block;
            }

                .registration-header h1::after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 100px;
                    height: 4px;
                    background: linear-gradient(90deg, #23dee0, #fecb15);
                    border-radius: 2px;
                }

