<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İKAF | İç Anadolu Kariyer Fuarı</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.css" />
    <link href="~/css/quickaccess.css" rel="stylesheet" />
    <link href="~/css/countdown.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/news.css" rel="stylesheet" />
    <link href="~/css/rector-message.css" rel="stylesheet" />
    <link href="~/css/partners.css" rel="stylesheet" />
    <link href="~/css/rector-modal.css" rel="stylesheet" />
    <link href="~/css/hakkimizda.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <link href="~/css/quickaccessbuttons.css" rel="stylesheet" />
    <link href="~/css/danismakurulu.css" rel="stylesheet" />
    <link href="~/css/duzenlemekurulu.css" rel="stylesheet" />
    <link href="~/css/sponsor.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row align-items-center nav-wrapper">
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="logo-container">
                        <a href="/">
                            <img src="https://ikaf.selcuk.edu.tr/wp-content/uploads/2024/11/logoikav2.png"
                                 alt="İKAF Logo"
                                 class="logo-img" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-6">
                    <nav id="site-navigation" class="main-navigation">
                        <div class="menu-toggle">
                            <i class="fa fa-bars"></i>
                        </div>
                        <div class="menu-container">
                            <ul class="nav-menu">
                                <!-- Ana Sayfa -->
                                <li class="menu-item">
                                    <a href="/"><i class="fas fa-home menu-icon"></i>Ana Sayfa</a>
                                </li>

                                <!-- İKAF'25 Dropdown -->
                                <li class="menu-item has-submenu">
                                    <a href="#"><i class="fas fa-info-circle menu-icon"></i>İKAF'25</a>
                                    <ul class="submenu">
                                        <li><a href=@Url.Action("Hakkimizda", "Ikaf")><i class="fas fa-info menu-icon"></i>Hakkımızda</a></li>
                                        <li><a href=@Url.Action("Rektorumuzden", "Ikaf")><i class="fas fa-user-tie menu-icon"></i>Rektörümüzden</a></li>
                                        <li><a href=@Url.Action("PaydasUniversiteler", "Ikaf")><i class="fas fa-university menu-icon"></i>Paydaş Üniversiteler</a></li>
                                        <li><a href=@Url.Action("DanismaKurulu", "Ikaf")><i class="fas fa-users-cog menu-icon"></i>Danışma Kurulu</a></li>
                                        <li><a href=@Url.Action("DuzenlemeKurulu", "Ikaf")><i class="fas fa-user-friends menu-icon"></i>Düzenleme Kurulu</a></li>
                                        <li><a href="#gonullu-ogrenciler"><i class="fas fa-hands-helping menu-icon"></i>Gönüllü Öğrencilerimiz</a></li>
                                    </ul>
                                </li>

                                <!-- Fuar Alanı -->
                                <li class="menu-item has-submenu">
                                    <a href="#"><i class="fas fa-map-marked-alt menu-icon"></i>Fuar Alanı</a>
                                    <ul class="submenu">
                                        <li><a href="#fuar-video"><i class="fas fa-play-circle menu-icon"></i>Video</a></li>
                                        <li><a href="#animasyon"><i class="fas fa-film menu-icon"></i>Animasyon</a></li>
                                        <li><a href="#kat-plani"><i class="fas fa-map menu-icon"></i>Kat Planı</a></li>
                                    </ul>
                                </li>

                                <!-- Etkinlik Takvimi -->
                                <li class="menu-item has-submenu">
                                    <a href="#"><i class="fas fa-calendar-alt menu-icon"></i>Etkinlik Takvimi</a>
                                    <ul class="submenu">
                                        <li><a href="#sunucumuz"><i class="fas fa-microphone menu-icon"></i>Sunucumuz</a></li>
                                        <li><a href="#konusmacilar"><i class="fas fa-user-tie menu-icon"></i>Konuşmacılar</a></li>
                                        <li><a href="#program"><i class="fas fa-clock menu-icon"></i>Program</a></li>
                                    </ul>
                                </li>

                                <!-- Basın -->
                                <li class="menu-item has-submenu">
                                    <a href="#"><i class="fas fa-newspaper menu-icon"></i>Basın</a>
                                    
                                </li>

                                <!-- Kayıt - Özel Tasarım -->
                                <li class="menu-item has-submenu">
                                    <a href="#" class="glow-effect"><i class="fas fa-user-plus menu-icon"></i>Kayıt</a>
                                    <ul class="submenu">
                                        <li><a href=@Url.Action("OgrenciKayit","Ikaf")><i class="fas fa-user-graduate menu-icon"></i>Öğrenci Kayıt</a></li>
                                        <li><a href="#isveren-kayit"><i class="fas fa-briefcase menu-icon"></i>İşveren Kayıt</a></li>
                                    </ul>
                                </li>

                                <!-- Konaklama -->
                                <li class="menu-item">
                                    <a href=@Url.Action("Konaklama","Ikaf")><i class="fas fa-bed menu-icon"></i>Konaklama</a>
                                </li>

                                <!-- İletişim -->
                                <li class="menu-item">
                                    <a href="#iletisim"><i class="fas fa-envelope menu-icon"></i>İletişim</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer Bölümü -->
    <footer class="site-footer">
        <div class="footer-main">
            <div class="container">
                <div class="footer-grid">
                    <!-- Logo Bölümü -->
                    <div class="footer-widget">
                        <div class="footer-logo">
                            <a href="https://www.cbiko.gov.tr/projeler/yetenek-her-yerde" target="_blank" rel="noopener noreferrer">
                                <img src="~/img/logo/yetenek-heryerde.png" alt="Yetenek Her Yerde Logo" />
                            </a>
                        </div>
                    </div>

                    <!-- İletişim Bilgileri -->
                    <div class="footer-widget">
                        <h3 class="widget-title">İletişim</h3>
                        <div class="contact-info">
                            <p class="contact-heading">Selçuk Üniversitesi İKAF İletişim Merkezi</p>
                            <p class="contact-address">Selçuk Üniversitesi Rektörlüğü Alaeddin Keykubat Yerleşkesi Akademi Mah. Yeni İstanbul Cad. No. 369 Posta Kodu: 42130 Selçuklu/Konya/TÜRKİYE</p>
                            <p class="contact-phone">0332 223 31 29</p>
                            <p class="contact-email">selcukkariyer@selcuk.edu.tr</p>
                        </div>
                    </div>

                    <!-- Sosyal Medya -->
                    <div class="footer-widget">
                        <h3 class="widget-title">Bizi Takip Edin</h3>
                        <div class="social-links">
                            <a href="https://facebook.com/ikaf.2025" target="_blank" class="social-link">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://x.com/ikaf2025" target="_blank" class="social-link">
                                <i class="fab fa-x-twitter"></i>
                            </a>
                            <a href="https://instagram.com/ikaf.2025" target="_blank" class="social-link">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alt Footer -->
        <div class="footer-bottom">
            <div class="container">
                <p class="copyright">İKAF 2025 | Copyright © Tüm Hakkı Saklıdır. All rights reserved.</p>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/countdown.js"></script>
    <script src="~/js/rector-modal.js"></script>
    <script src="~/js/hakkimizda.js"></script>
    <script src="~/js/quickbuttons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
